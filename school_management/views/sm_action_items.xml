<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_open_school_form_default" model="ir.actions.server">
            <field name="name">Open School Info Smart</field>
            <field name="model_id" ref="model_school_info"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">action = env['school.info'].open_school_form()</field>
        </record>

        <record id="action_sm_class_info" model="ir.actions.act_window">
            <field name="name">class.information</field>
            <field name="res_model">class.info</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_sm_class_info_list"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Add a New Class
              </p>
            </field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>
