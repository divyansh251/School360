<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sm_school_info_form" model="ir.ui.view">
            <field name="name">school.info.form</field>
            <field name="model">school.info</field>
            <field name="arch" type="xml">
                <form string="School Details" create="0">
                    <sheet>
                        <group>
                            <field name="school_name"/>
                            <field name="principle_name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_sm_school_info_list" model="ir.ui.view">
            <field name="name">school.info.list</field>
            <field name="model">school.info</field>
            <field name="arch" type="xml">
                <list string="School">

                </list>
            </field>
        </record>
    </data>
</odoo>
